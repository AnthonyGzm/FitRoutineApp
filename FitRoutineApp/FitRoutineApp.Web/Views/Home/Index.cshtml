@{
    ViewData["Title"] = "Página de Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/home-sport.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .carousel-background {
            position: relative;
            z-index: 1;
            width: 100%;
            height: 70vh;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            overflow: hidden; /* Evita que las imágenes se salgan del contenedor */
        }

        .carousel-inner {
            height: 100%; /* Asegúrate de que el contenedor tenga la altura completa */
        }

        .carousel-item img {
            width: 100%; /* Ajusta el ancho de la imagen al contenedor */
            height: 100%; /* Ajusta la altura de la imagen al contenedor */
            object-fit: cover; /* Ajusta el ajuste de la imagen para que cubra el contenedor sin distorsionar */
        }

        .card {
            margin-top: 20px;
            border: none;
        }

            .card img {
                width: 100%;
                height: auto;
            }

        .btn-custom {
            background-color: #28a745;
            color: white;
            border-radius: 50px;
        }

            .btn-custom:hover {
                background-color: #218838;
            }

        .carousel-indicators li {
            background-color: #007bff;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-10">
                <div class="carousel-background">
                    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="6000">
                        <ol class="carousel-indicators">
                            <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
                            <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
                            <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/activity1.jpg" class="d-block w-100" alt="Actividad 1">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/activity2.jpg" class="d-block w-100" alt="Actividad 2">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/activity3.jpg" class="d-block w-100" alt="Actividad 3">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </a>
                        <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card">
                    <div class="card-header d-flex justify-content-center">
                        <img src="/images/FitRoutine.png" alt="Logo" style="width: 150px; height: auto;" />
                    </div>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-custom btn-lg" type="button" onclick="location.href='@Url.Action("IniciarSesion", "Login")'">Iniciar Sesión</button>
                        <button class="btn btn-secondary btn-lg mt-2" type="button" onclick="location.href='@Url.Action("Registro", "Login")'">Registrarse</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
