@model FitRoutineApp.Web.Models.Sesion
@{
    ViewData["Title"] = "Crear Sesión";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Crear Sesión</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label for="idUsuario" class="col-form-label col-auto"><i class="oi oi-people"></i> Seleccione un Usuario:</label>
                    <div class="col-auto">
                        <div class="input-group">
                            <select asp-for="IdUsuario" asp-items="ViewBag.Usuarios" class="form-control"></select>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Entrenador" class="col-form-label col-auto"><i class="oi oi-people"></i> Seleccione un Entrenador:</label>
                    <div class="col-auto">
                        <div class="input-group">
                            <select asp-for="IdEntrenador" asp-items="ViewBag.Entrenadores" class="form-control"></select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Fecha</label>
                    <input asp-for="FechaSesion" type="date" class="form-control" placeholder="Fecha" />
                    <span asp-validation-for="FechaSesion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Hora</label>
                    <input asp-for="HoraSesion" type="time" class="form-control" placeholder="Hora" />
                    <span asp-validation-for="HoraSesion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
