@model FitRoutine.Web.Models.Sesion

@{
    ViewData["Title"] = "Editar Sesión";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Editar Sesión</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label for="ClienteId">Cliente</label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteOptions"></select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="EntrenadorId">Entrenador</label>
                    <select asp-for="EntrenadorId" class="form-control" asp-items="ViewBag.EntrenadorOptions"></select>
                    <span asp-validation-for="EntrenadorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ActividadId">Actividad</label>
                    <select asp-for="ActividadId" class="form-control" asp-items="ViewBag.ActividadOptions"></select>
                    <span asp-validation-for="ActividadId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Fecha">Fecha y Hora</label>
                    <input asp-for="Fecha" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="fa fa-save"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal">
                            <i class="fa fa-ban"></i> Cancelar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
