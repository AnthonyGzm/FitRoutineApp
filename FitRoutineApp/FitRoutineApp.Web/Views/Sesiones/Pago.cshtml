@model FitRoutineApp.Web.Models.Pago

@{
    ViewData["Title"] = "Pagar";
    Layout = null;
}

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Pagar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetodoPago" class="control-label"></label>
                <input asp-for="MetodoPago" class="form-control" />
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-success"><i class="oi oi-circle-check"></i> Guardar</button>
                <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="oi oi-ban"></i> Cancelar</button>
            </div>
        </form>
    </div>
</div>
